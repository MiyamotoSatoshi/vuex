{
  "presets": ["es2015"],
  "plugins": ["transform-runtime"],
  "env": {
    "test": {
      "plugins": [
        ["module-resolver", {
          "root": ["./src"],
          "alias": {
            "~components": "components",
            "~directives": "directives",
            "~mixins": "mixins",
            "~stylus": "stylus",
            "~util": "util"
          }
        }]
      ]
    },
    "development": {
      "presets": [
        ["es2015",  { "modules": false }]
      ],
      "plugins": ["add-filehash"]
    },
    "production": {
      "presets": [
        ["es2015",  { "modules": false }]
      ]
    }
  }
}
