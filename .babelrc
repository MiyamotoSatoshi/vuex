{
  "env": {
    "test": {
      "presets": [
        ["env", {
          "targets": {
            "node": "current"
          }
        }]
      ],
      "plugins": [
        ["module-resolver", {
          "root": ["./src"],
          "alias": {
            "~components": "components",
            "~directives": "directives",
            "~mixins": "mixins",
            "~stylus": "stylus",
            "~util": "util"
          }
        }]
      ]
    },
    "development": {
      "presets": [
        ["es2015",  {"modules": false}],
        ["stage-2"]
      ],
      "plugins": ["add-filehash"]
    },
    "production": {
      "presets": [
        ["es2015",  {"modules": false}],
        ["stage-2"]
      ]
    }
  }
}
