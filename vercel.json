{
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": true,
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "$1"
    },
    {
      "source": "/((?!assets/).*)",
      "destination": "/_fallback"
    }
  ],
  "headers": [
    {
      "source": "/service-worker.js",
      "headers" : [
        {
          "key" : "Cache-Control",
          "value" : "public, max-age=0, s-maxage=0, must-revalidate"
        },
        {
          "key" : "CDN-Cache-Control",
          "value" : "max-age=0"
        }
      ]
    },
    {
      "source": "[a-z0-9]{8}\\.(js|css)(\\.map)?",
      "headers" : [
        {
          "key" : "Cache-Control",
          "value" : "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers" : [
        {
          "key" : "Cache-Control",
          "value" : "public, max-age=3600, must-revalidate"
        }
      ]
    }
  ],
  "github": {
    "enabled": false,
    "autoAlias": false,
    "silent": true
  }
}
