.with
  min-height: 100vh
  
  &.top-fixed-navbar
    padding-top: $navbar-height
      
    header
      z-index: 4

  &.top-navbar
    main
      min-height: 'calc(100vh - %s)' % $navbar-height
      
      > .content
        padding-top: $spacers.three.y
        
  &.bottom-footer
    main
      min-height: 'calc(100vh - %s)' % $footer-height
      
  &.bottom-footer&.top-navbar, &.bottom-footer&.top-fixed-navbar
    main
      min-height: 'calc(100vh - %s - %s)' % ($navbar-height $footer-height)
      
  &.left-fixed-sidebar
    header .navbar,
    main,
    footer
      padding-left: $sidebar-width
      transition: $primary-transition
  
      @media screen and (max-width: ($grid-breakpoints.lg - 1))
        padding-left: 0
        
  &.left-sidebar
    .sidebar
      box-shadow: none
      
    main
      background: $theme.secondary
      
      > .content
        background: #fff
  
  &.right-fixed-sidebar
    header .navbar,
    main,
    footer
      padding-right: $sidebar-width
      transition: $primary-transition
      
      @media screen and (max-width: ($grid-breakpoints.lg - 1))
        padding-right: 0