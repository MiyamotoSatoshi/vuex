.with
  min-height: 100vh
  -webkit-backface-visibility: hidden
  overflow-x: hidden
  
  &.top-fixed-toolbar
    padding-top: $toolbar-height
      
    header
      z-index: 4

  &.top-toolbar
    main
      min-height: 'calc(100vh - %s)' % $toolbar-height
      
      > .content
        padding-top: $spacers.three.y
        
  &.bottom-footer
    main
      min-height: 'calc(100vh - %s)' % $footer-height
      
  &.bottom-footer&.top-toolbar, &.bottom-footer&.top-fixed-toolbar
    main
      min-height: 'calc(100vh - %s - %s)' % ($toolbar-height $footer-height)
      
  &.left-fixed-sidebar
    header .toolbar
      padding-left: $sidebar-width + $toolbar-padding-x
      transition: $primary-transition
  
      @media screen and (max-width: ($grid-breakpoints.lg - 1))
        padding-left: $toolbar-padding-x
      
    main,
    footer
      padding-left: $sidebar-width
      transition: $primary-transition
  
      @media screen and (max-width: ($grid-breakpoints.lg - 1))
        padding-left: 0
        
  &.left-sidebar
    main
      background: $theme.secondary

    .sidebar
      box-shadow: none
  
  &.right-fixed-sidebar
    header .toolbar,
    main,
    footer
      padding-right: $sidebar-width
      transition: $primary-transition
      
      @media screen and (max-width: ($grid-breakpoints.lg - 1))
        padding-right: 0
        
  &.sidebar-under-toolbar
    .sidebar
      z-index: 5

    &.left-fixed-sidebar,
    &.right-fixed-sidebar
      .sidebar
        padding-top: $toolbar-height

      .toolbar
        padding-left: inherit
        
.app
  &__bar
    align-items: center
    background: $grey.lighten-3
    display: flex
    width: 100%
    
    .btn-dropdown--overflow .input-group
      border: none
      margin: 0
    
    .input-group__details
      display: none
    
    > div
      min-width: 130px
      &:not(:first-child)
        margin-left: 1px
        
        &:before
          content: ''
          position: absolute
          height: 60%
          top: 50%
          transform: translateY(-50%)
          left: -1px
          background: $material-twelve-percent-dark
          width: 1px
          z-index: 0
      
    .input-group:not(.input-group--focused)
      .input-group__input
        &:hover
          background: $grey.lighten-4
        
    .btn-toggle
      box-shadow: none
      background: transparent
      position: relative
      padding: 0 8px
      
      .btn
        background: transparent
        border: none !important
        height: 42px
        margin: 0 8px
        
        .icon
          font-size: 26px
          width: 26px