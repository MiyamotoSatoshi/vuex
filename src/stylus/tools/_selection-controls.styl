selection-controls-switch-theme(color, background, labelColor, enabledColor, disabledColor, disabledBackground)
  color: enabledColor

  label
    color: labelColor

  .input-group--selection-controls__toggle
    background: color

    &--active
      background: currentColor
      opacity: .5

  .input-group--selection-controls__ripple
    color: currentColor

    &:after
      background: background

    &--active
      &:after
        background: currentColor

  .input-group--selection-controls__container--disabled
    color: disabledColor

    .input-group--selection-controls__toggle
      background: disabledBackground
      opacity: 1

    .input-group--selection-controls__ripple
      color: disabledColor

      &:after
        background: disabledColor

selection-controls-checkbox-theme(color, labelColor, disabledColor, activeColor)
  label
    color: labelColor

  .icon
    color: color

  &.input-group--active
    .input-group--selection-controls__ripple
      color: activeColor

    .icon
      color: activeColor

  &.input-group--disabled
    .input-group--selection-controls__ripple
      color: disabledColor

    .icon
      color: disabledColor
