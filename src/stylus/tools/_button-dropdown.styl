btn-dropdown-theme(theme)
  &.btn-dropdown--segmented
    input
      border-right: 1px solid theme
      
  &.btn-dropdown--editable
    .input-group--focused
      input
        border-right: 1px solid theme
  
  &.btn-dropdown--overflow, &.btn-dropdown--editable, &.btn-dropdown--segmented
    .input-group
      border-top: 1px solid theme
      
  .input-group__hint:after
    display: none