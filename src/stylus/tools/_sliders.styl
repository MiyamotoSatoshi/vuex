slider($material)
  label
    transform: none
    flex-basis: 56px
    color: $material.text.secondary
    display: flex
    font-size: 18px
    align-items: center

  .slider__track
    background: $material.slider.inactive

  .slider__track__container
    &:after
      border: 0 solid $material.text.primary
      border-left-width: 2px
    
  .slider__ticks
    background: repeating-linear-gradient(
      90deg,
      $material.text.primary,
      $material.text.primary 2px,
      transparent 0,
      transparent
    )

  &.input-group--dirty
    .slider__track-fill
      background: $material.slider.inactive
  
  &:not(.input-group--dirty)
    .slider__thumb--label
      background: $material.slider.inactive

    &.input-group--ticks
      .slider__thumb-container--label
        .slider__thumb
          background: $material.slider.discrete
    
    &:not(.input-group--ticks)
      .slider__thumb
        border: 4px solid $material.slider.inactive

      &:focus
        .slider__thumb
          border: 4px solid $material.slider.active

  &.input-group--disabled:not(.input-group--ticks)
    .slider__thumb
      background: $material.slider.disabled
      border: 0px solid transparent

  &:focus
    .slider__track
      background: $material.slider.active
  