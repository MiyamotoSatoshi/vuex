.container
  margin-right: auto
  margin-left: auto
  flex-basis: 100%
  padding: $grid-gutter
  
  @media $display-breakpoints.xs-only
    padding: $grid-gutter-mobile

.container
  for size, width in $container-max-widths
    @media only screen and (min-width: width)
      max-width: width

  &--fluid
    max-width: 100%
    width: 100%

.layout
  display: flex
  margin-right: -($grid-gutter / 2)
  margin-left: -($grid-gutter / 2)

  &.row, &.column
    flex: 0 1 auto
    
    &.grow
      flex-grow: 1

  &.row
    flex-direction: row

    &.reverse
      flex-direction: row-reverse

  &.column
    flex-direction: column
    
    &.reverse
      flex-direction: column-reverse

  &.wrap
    flex-wrap: wrap

  &.align
    &-start
      align-items: flex-start
    
    &-end
      align-items: flex-end
      
    &-center
      align-items: center
      
    &-baseline
      align-items: baseline
      
  &.justify
    &-start
      justify-content: flex-start
      
    &-end
      justify-content: flex-end
      
    &-center
      justify-content: center
      
    &-space-around
      justify-content: space-around
    
    &-space-between
      justify-content: space-between

  &.flex, &.child-flex > *
    flex: 1

  .flex
    padding-right: ($grid-gutter / 2)
    padding-left: ($grid-gutter / 2)

  for size, width in $grid-breakpoints
    .flex.{size}
      flex-grow: 1
      flex-shrink: 1

    @media only screen and (min-width: width)
      &.row-{size}
        flex: 0 1 auto
        flex-direction: row

      &.column-{size}
        flex: 0 1 auto
        flex-direction: column
        
      &.flex, &.child-flex-{size} > *
        flex: 1

      for n in (1..$grid-columns)
        .flex.{size}{n}
          flex-basis: (n / $grid-columns * 100)%
          max-width: (n / $grid-columns * 100)%

        .flex.offset-{size}{n}
          margin-left: (n / $grid-columns * 100)%

        .flex.order-{size}{n}
          order: n

.spacer
  flex-grow: 1

.scroll-y
  overflow-y: auto

.fill-height
  height: 100%
  
.show-overflow
  overflow: visible !important
  
.flexbox
  display: flex
