.input-group--select
  input
    opacity: 0

  .input-group__append-icon
    transition: .3s $transition.linear-out-slow-in
    
  &.input-group--focused
    input
      opacity: 1

    .input-group__append-icon
      transform: rotate(-180deg)
  
  &.input-group--dirty.input-group--focused.input-group--chips
    input
      margin: 8px 0
      
  .input-group__input, input
    cursor: pointer
    
  &.input-group--disabled
    cursor: not-allowed
    pointer-events: none
    
.input-group--select
  .input-group__selections
    display: flex
    flex-wrap: wrap
    width: 100%
    position: relative
    
    > div
      display: flex
      flex-wrap: wrap
      flex: 1

    &__comma
      font-size: 16px
      height: 30px
      padding-top: 4px
      padding-right: 4px

.input-group--select
  &.input-group--light
    .input-group__selections__comma
      color: rgba(#000, .87)
      
    .input-group__selections__comma--active
      color: $theme.primary
      
  &.input-group--dark
    .input-group__selections__comma
      color: #fff