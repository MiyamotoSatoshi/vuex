@import '../bootstrap'
@import '../theme'

v-select($material)
  &__selection
    color: $material.text.primary

theme(v-select, 'v-select')

.v-select
  .menu
    flex: 1 1 auto

  .chip
    flex: 0 1 auto

  .fade-transition-leave-active
    position: absolute
    left: 0

  input
    opacity: 0
    pointer-events: none

  &.v-select--is-menu-active
    .v-input__icon--append .icon
      transform: rotate(180deg)

  &--chips
    .v-label.v-label--active
      transform: translateY(-22px) scale(0.75)

  &__slot
    width: 100%
    align-items: center
    display: flex

.v-select-list
  .list__tile__action
    .v-input--selection-controls
      .v-input__wrapper
        &:after, &:before
          display: none
