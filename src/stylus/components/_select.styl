.input-group--select
    
  .input-group__append-icon
    transition: .3s $transition.linear-out-slow-in
    
  &.input-group--focused
    .input-group__append-icon
      transform: rotate(-180deg)
    
  &.input-group--disabled
    cursor: not-allowed
    pointer-events: none
    
.input-group--select
  .input-group__selections
    display: flex
    flex-wrap: wrap
    width: 100%
    
    input
      cursor: pointer

    &__comma
      font-size: 16px
      height: 30px
      padding-top: 4px
      padding-right: 4px
      

.input-group--select
  &.input-group--light
    .input-group__selections__comma
      color: rgba(#000, .87)
      
  &.input-group--dark
    .input-group__selections__comma
      color: #fff