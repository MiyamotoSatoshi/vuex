@import '../bootstrap'
@import '../theme'

v-select($material)
  // Needs an explicit color to override
  // higher level color
  &__selection
    color: $material.text.primary

  &.v-input--is-disabled
    .v-select__selection
      color: $material.text.disabled

theme(v-select, 'v-select')

.v-select
  .v-menu
    flex: 1 1 auto

  .v-chip
    flex: 0 1 auto

  .fade-transition-leave-active
    position: absolute
    left: 0

  // For specificity, hide caret
  &.v-text-field
    input
      flex: 1 1 0
      min-width: 40%
      pointer-events: none

  &.v-select--is-menu-active
    .v-input__icon--append .v-icon
      transform: rotate(180deg)

  &--chips
    .v-label.v-label--active
      transform: translateY(-22px) scale(0.75)

  &__selections
    display: flex
    flex: 1 1 auto
    flex-wrap: wrap

  &__selection
    &--comma
      align-items: center
      display: inline-flex
      margin-right: 4px

  &__slot
    align-items: center
    display: flex
    width: 100%

.v-select-list
  .v-list__tile__action
    .v-input--selection-controls
      .v-input__slot
        &:after, &:before
          display: none
