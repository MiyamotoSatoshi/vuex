@import '../bootstrap'
@import '../theme'

v-select($material)
  // Needs an explicit color to override
  // higher level color
  &__selection
    color: $material.text.primary

  &.v-input--is-disabled
    .v-select__selection
      color: $material.text.disabled

theme(v-select, 'v-select')

.v-select
  .menu
    flex: 1 1 auto

  .chip
    flex: 0 1 auto

  .fade-transition-leave-active
    position: absolute
    left: 0

  // For specificity, hide caret
  &.v-text-field
    input
      caret-color: transparent !important
      pointer-events: none

  &.v-select--is-menu-active
    .v-input__icon--append .icon
      transform: rotate(180deg)

  &--chips
    .v-label.v-label--active
      transform: translateY(-22px) scale(0.75)

  &__slot
    width: 100%
    align-items: center
    display: flex

.v-select-list
  .list__tile__action
    .v-input--selection-controls
      .v-input__slot
        &:after, &:before
          display: none
