@import '../bootstrap'
@import '../theme'

v-select($material)
  // Needs an explicit color to override
  // higher level color
  &__selections
    color: $material.text.primary

  &.v-input--is-disabled
    .v-select__selections
      color: $material.text.disabled

theme(v-select, 'v-select')

.v-select
  // This is here to avoid making it transparent
  // then visible when autocomplete
  &:not(.v-autocomplete)
    input
      caret-color: transparent !important

  .v-menu
    height: 100%
    flex: 1 1 auto

  .v-chip
    flex: 0 1 auto

  .fade-transition-leave-active
    position: absolute
    left: 0

  // For specificity, hide caret
  &.v-text-field
    input
      bottom: 1px
      flex: 1 1 0
      min-width: 40%
      pointer-events: none
      position: relative

  &.v-select--is-menu-active
    .v-input__icon--append .v-icon
      transform: rotate(180deg)

  // Essentially duplicated from _text-fields.styl
  &.v-text-field--box
    &:not(.v-text-field--single-line)
      .v-select__selections
        align-self: flex-end
        position: relative

  &.v-select--chips
    .v-input__prepend-outer,
    .v-input__append-outer
      align-self: center
      margin-bottom: 0
      margin-top: 0

    .v-select__selections
      padding: 8px 0
      margin-left: -4px // to line up the chips

    &.v-text-field--box,
    &.v-text-field--solo
      .v-select__selections
        margin-top: 24px

    &.v-text-field--box
      .v-label
        top: 26px

        &--active
          transform: translateY(-60%) scale(0.75)

  &__selections
    align-items: center
    display: flex
    flex: 1 1 auto
    flex-wrap: wrap

  &__selection
    &--comma
      align-items: center
      display: inline-flex
      margin-right: 4px

  &__slot
    align-items: center
    display: flex
    height: 100%
    width: 100%

.v-select-list
  .v-list__tile__action
    .v-input--selection-controls
      .v-input__slot
        &:after, &:before
          display: none
