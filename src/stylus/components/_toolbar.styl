.toolbar
  align-items: center
  background-color: $theme.primary
  display: flex
  flex-wrap: wrap
  height: $toolbar-height
  position: relative
  padding: $toolbar-padding-y $toolbar-padding-x
  width: 100%
  z-index: 6
  elevation(4)

  ul
    list-style: none
    
  li
    height: 100%
    
  i
    font-size: 24px

  .menu__activator
    height: 100%

  .btn:not(.toolbar__side-icon)
    margin: 0 6px
    
    &:first-child
      margin-left: -6px
      
    &:last-child
      margin-right: 0

  &--fixed
    position: fixed
    top: 0
    left: 0

  &__sub
    flex: 1 0 100%
    padding: 24px 0 24px 72px
    
  &__side-icon
    display: inline-flex
    align-items: center
    position: relative
    margin-left: 10px
  
  &__logo
    color: #fff
    font-size: 3rem
    flex: 1;
    text-decoration: none
    padding: 0
    display: flex
    align-items: center
    
  &__title
    color: #fff
    font-size: $headings.h6.size
    flex: 1;
    padding: 0 16px
    white-space: nowrap
    overflow: hidden
    text-overflow: ellipsis
    
    &:first-child
      padding-left: 2px
  
  &__items
    list-style-type: none
    padding: 0
    background-color: inherit
    display: flex
    align-items: center
    height: 100%
    max-width: 100%

    > li
      display: flex
      align-items: center
      
  &__item
    align-items: center
    color: #fff
    display: flex
    padding: $toolbar-item-padding
    text-decoration: none
    transition: all 0.3s ease-out
    position: relative
    height: 100%
    white-space: nowrap
    
    i
      font-size: 2rem
    
    &:hover, &--active
      background: rgba(#000,0.1)
      
    &--disabled
      opacity: .5
      pointer-events: none
      
  .input-group
    margin: 0 0 0 16px
    flex: 1
      
    &--dark
      .icon
        color: #fff
    
    &--light
      .icon
        color: #000
    
    &--dark.input-group--focused.input-group--prepend-icon,
    &--dark.input-group--focused.input-group--append-icon
      .icon
        color: #fff
    
    &--light.input-group--focused.input-group--prepend-icon,
    &--light.input-group--focused.input-group--append-icon
      .icon
        color: #000
