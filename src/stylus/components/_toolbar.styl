.toolbar
  align-items: center
  display: flex
  flex-wrap: wrap
  height: $toolbar-height
  position: relative
  padding: $toolbar-padding-y 0
  transition: .3s $transition.swing
  width: 100%
  will-change: padding-left
  elevation(4)
  z-index: 2

  > *:first-child
    margin-left: $grid-gutter

  > *:last-child
    margin-right: $grid-gutter

  @media $display-breakpoints.xs-only
    > *:first-child
      margin-left: $grid-gutter-mobile

    > *:last-child
      margin-right: $grid-gutter-mobile

  i
    font-size: 24px

  .menu__activator
    height: 100%

  &--fixed, &--absolute
    + main
      padding-top: $toolbar-height

  &--fixed
    position: fixed

  &--absolute
    position: absolute

  &__sub
    flex: 1 0 100%
    padding: 24px 0 24px 72px

  &__side-icon
    align-items: center
    display: inline-flex
    margin-left: 10px
    position: relative

  &__logo
    align-items: center
    display: flex
    font-size: 3rem
    flex: 1;
    padding: 0
    text-decoration: none

  &__title
    font-size: $headings.h6.size
    flex: 1;
    overflow: hidden
    text-overflow: ellipsis
    white-space: nowrap

    &:not(:first-child)
      padding: 0 16px

  &__items
    align-items: center
    display: flex
    height: 100%
    list-style-type: none
    max-width: 100%
    padding: 0

    > li
      align-items: center
      display: flex

  &__item
    align-items: center
    display: flex
    height: 100%
    padding: $toolbar-item-padding
    position: relative
    text-decoration: none
    transition: all 0.3s ease-out
    white-space: nowrap

    i
      font-size: 2rem

    &--disabled
      opacity: .5
      pointer-events: none

  .input-group
    margin: 0 0 0 16px
    flex: 1