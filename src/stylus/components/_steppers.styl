.stepper
  overflow: hidden
  position: relative
  @extend .z-depth-1
  
  &--vertical
    .stepper__content
      margin: -16px 0 -16px 36px
    .stepper__content:not(:last-child)
      border-left: 1px solid $material-twelve-percent-dark
  
.stepper
  .divider
    align-self: center
    margin: 0 -8px
  
.stepper
  &__header
    align-items: stretch
    display: flex
    flex-wrap: wrap
    justify-content: space-between
    @extend .z-depth-1
    

.stepper
  &__step
    align-items: center
    display: flex
    flex-direction: row
    flex-wrap: wrap
    padding: 24px
    position: relative
    
    &--active
      .stepper__label
        text-shadow: 0px 0px 0px black
        transition: .3s $transition.ease-in-out
    
    &--editable
      cursor: pointer

      &:hover
        background: rgba(#000, .1)

    &__step
      align-items: center
      background: $theme.primary
      border-radius: 50%
      color: white
      display: flex
      font-size: 12px
      justify-content: center
      height: 24px
      margin-right: 8px
      width: 24px
    
.stepper
  &__label
    align-items: flex-start
    display: flex
    flex-direction: column
    text-align: left
    
    small
      font-size: 12px
      color: rgba(#000, .54)
      text-shadow: none

.stepper
  &__wrapper
    overflow: hidden
    transition: .3s $transition.ease-in-out

.stepper
  &__content
    top: initial
    bottom: 0
    padding: 16px
    overflow: hidden
    transition: .3s $transition.ease-in-out
    width: 100%