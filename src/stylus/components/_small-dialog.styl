@import '../bootstrap'

.small-dialog__content
  background: #fff
  padding: 0 24px

.small-dialog
  display: block
  height: 100%

  &__actions
    background: #fff
    text-align: right

  a
    display: flex
    align-items: center
    color: rgba($material-theme.fg-color, $material-theme.primary-text-percent)
    height: 100%
    text-decoration: none

    > *
      width: 100%

  .menu__activator
    height: 100%
