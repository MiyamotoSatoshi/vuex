@import '../bootstrap'
@import '../theme'

v-small-dialog($material)
  .v-small-dialog__content
    background: $material.cards

  .v-small-dialog__actions
    background: $material.cards

  a
    color: rgba($material.fg-color, $material.primary-text-percent)

theme(v-small-dialog, "v-small-dialog")

.v-small-dialog
  display: block
  width: 100%
  height: 100%

  &__content
    padding: 0 24px

  &__actions
    text-align: right

  a
    display: flex
    align-items: center

    height: 100%
    text-decoration: none

    > *
      width: 100%

  .v-menu__activator
    height: 100%
