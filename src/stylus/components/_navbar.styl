.navbar
  background-color: $theme.primary
  display: flex
  flex-wrap: wrap
  height: $navbar-height
  position: relative
  width: 100%
  @extend .z-depth-1
  
  ul
    list-style: none
    
  li
    height: 100%

  &--fixed
    position: fixed
    top: 0
    left: 0
    z-index: 4
    
  &__side-icon
    display: inline-flex
    align-items: center
    margin: 0 1rem
    
    a
      color: #FFFFFF
      display: flex
      align-items: center
      flex: 1
      font-size: 1rem
      text-decoration: none
      
      i
        font-size: 3rem
  
  &__logo
    color: #fff
    font-size: 3rem
    flex: 1;
    text-decoration: none
    padding: 0 2rem
    display: flex
    align-items: center
  
  &__items
    list-style-type: none
    padding: 0
    background-color: inherit
    display: flex
    align-items: center
    height: 100%

    > li
      display: flex
      align-items: center
      
  &__item
    align-items: center
    color: #fff
    display: flex
    padding: $navbar-item-padding
    text-decoration: none
    transition: all 0.3s ease-out
    position: relative
    height: 100%
    
    i
      font-size: 2rem
      
      + span
        margin-left: 5px
    
    &:hover, &--active
      background: rgba(#000,0.1)
      
  &__group
    position: relative
    background-color: inherit
    color: #fff
    height: 100%
    
    .navbar__items
      position: absolute
      top: 100%
      left: 0
      z-index: 99
      min-width: 100%
      background-color: $theme.secondary
      flex-direction: column
      overflow: hidden
      transition: .3s cubic-bezier(0,0,.2,1)
      flex-direction: column
      height: auto
      @extend .z-depth-1
      
      li
        width: 100%
        
      .navbar__item
        padding: 1rem
        white-space: nowrap
        color: inherit
        font-weight: 500
        width: 100%
        
        &:hover
          background-color: rgba(#fff,.2)
        
    &-header
      @extend .navbar__item
      padding-right: 45px
      
      &:after
        content: '\E314'
        font-family: 'Material Icons'
        font-size: 1.5rem
        position: absolute
        right: 15px
        top: calc(50% - 16px)
        color: inherit
        transition: transform 0.3s cubic-bezier(0, 0, .2, 1)
        transform: rotate(-90deg)