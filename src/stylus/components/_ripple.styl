.ripple    
  &__container
    position: absolute
    width: 100%
    height: 100%
    left: 0
    overflow: hidden
    z-index: 0
    color: $ripple-container-color
          
  &__animation
    position: absolute
    top: 0
    left: 0
    transform: translate3d(-50%, -50%, 0)
    border-radius: 50%
    background: $ripple-animation-background
    opacity: 0
    transition: $ripple-animation-transition
    pointer-events: none
    overflow: hidden
      
    &--enter
      transition: none
      
    &--visible
      opacity: $ripple-animation-visible-opacity