@import '../bootstrap'

.tooltip
  height: inherit
  position: relative

  > span
    height: inherit

  &__content
    background: $grey.darken-2
    border-radius: 2px
    color: #FFFFFF
    font-size: 12px
    display: inline-block
    padding: 5px 8px
    position: absolute
    text-transform: initial
    transition: .15s $transition.swing
    width: auto
    elevation(2)

    &[class*="-active"] {
      pointer-events: none
    }

  @media $display-breakpoints.sm-and-down
    .tooltip__content
      padding: 10px 16px
