/** Base Spec */
.input-group--text-field
  display: flex
  flex-wrap: wrap
  margin: $input-group-margin
  position: relative
  width: 100%

/** Label */
.input-group--text-field label
  display: flex
  align-items: center
  font-size $input-font-size
  height: $input-height
  pointer-events: none
  position: absolute
  transform: translate3d(0, 0, 0)
  transform-origin: top left
  transition: .4s $transition.fast-in-fast-out
  
.input-group--text-field.input-group--multi-line:not(.input-group--focused):not(.input-group--dirty) label
  transform: translate3d(0,0,0)


/** Input */
.input-group--text-field input
  font-size: $input-font-size
  flex: 1
  margin: 0
  min-width: 0
  height: $input-height
  
  + .icon
    padding: 0 6px
    transition: .3s $transition.ease-in-out

  &:focus
    outline: none
    
  &:disabled
    pointer-events: none

/** Textarea */
.input-group--text-field textarea
  font-size: $input-font-size
  width: 100%
  
  &:focus
    outline: none


/** Details */
.input-group
  &__details
    display: flex
    flex: 1 0 100%
    font-size: 12px
    min-height: 16px
    position: relative
    margin-top: 1px
    padding-top: 4px
    width: 100%

    &:after, &:before
      content: ''
      position: absolute
      left: 0

    &:after
      background-color: $theme.primary
      top: -1.5px
      height: 2px
      transition: .3s $transition.fast-out-slow-in
      width: 0%
      z-index: 1

    &:before
      top: -1px
      height: 1px
      width: 100%
      z-index: 0
      
/** Hint */
.input-group
  &__hint
    flex: 1 0
    transition: .3s $transition.fast-out-fast-out


/** Error */
.input-group
  &__error
    flex: 1 0
    transition: .3s $transition.fast-out-fast-out
    color: $theme.error

/** Counter */
.input-group
  &__counter
    margin-left: auto

    &--error
      color: $theme.error !important


/** Themes */
.input-group
  &--light
    input-group-theme($input-group-light-normal, #000, $input-group-light-focus, $material-twelve-percent-dark)

  &--dark
    input-group-theme($input-group-dark-normal, #fff, $input-group-dark-focus, $material-twelve-percent-light)

/** Input States */
.input-group
  &--focused
    label
      color: $theme.primary
      transform: translate3d(0, -18px, 0) scale(.75)

    .input-group__details
      &:after
        width: 100%

  &--dirty
    label
     transform: translate3d(0, -18px, 0) scale(.75)
     
  &.input-group--disabled .input-group__details:before
      background-color: transparent
      background-position: bottom
      background-size: 3px 1px
      background-repeat: repeat-x
      

/** Types */
.input-group
  &--error
    .input-group__details:after
      background-color: $theme.error
      
    .input-group__append-icon
      color: $theme.error !important
    
  &--prepend-icon
    .input-group__prepend-icon
      align-items: center
      display: flex
      justify-content: flex-start
      flex-basis: 56px
      transition: .3s $transition.fast-in-fast-out
     
    .input-group__details 
      &:before, &:after
        margin-left: 56px
        max-width: calc(100% - 56px)

    label
      padding-left: 56px
      
    input
      flex: auto
      
    &.input-group--focused
      .icon
        color: $theme.primary

  &--single-line      
    label
      transform: translate3d(0,0,0)
      
    &.input-group--dirty
      label
        display: none
        
  &--required
    label:after
      content: '*'
      
    &.input-group--focused
      label:after
        color: $theme.error
        
  &--error
    label
      color: $theme.error
      
    .input-group__details:before, .input-group__details:after
      background-color: $theme.error
  
  &__wrapper
    display: flex
    flex-basis: 100%
    min-width: 0