.navigation-drawer
  max-width: 100%
  overflow-y: auto
  overflow-x: hidden
  padding: 0 0 100px
  pointer-events: auto
  position: fixed
  transition: transform .3s $transition.swing,
    margin .3s $transition.swing,
    width .2s $transition.ease-in-out
  width: $navigation-drawer-width
  top: 0
  left: 0
  z-index: 3
  
  &--close
    &.navigation-drawer:not(.navigation-drawer--right)
      transform: "translate3d(-%s, 0, 0)" % ($navigation-drawer-width)

    &.navigation-drawer--right
      transform: "translate3d(%s, 0, 0)" % ($navigation-drawer-width)

  &--right
    left: initial
    right: 0

  &--absolute
    position: absolute
        
  &--dark
    background-color: $theme.secondary
    border-right: 1px solid rgba(#fff, $material-dark.divider-percent)
    navigation-drawer(#fff)
    
    .divider
      background: $material-twelve-percent-light
    
  &--light
    background: #fff
    border-right: 1px solid rgba(#000, $material-light.divider-percent)
    navigation-drawer(rgba(#000, .87))
    
    .divider
      background: $material-twelve-percent-dark
  
  &--permanent, &--persistent
    &.navigation-drawer--open:not(.navigation-drawer--is-mobile)
      &:not(.navigation-drawer--clipped)
        + .toolbar
          padding-left: $navigation-drawer-width

      ~ main
        padding-left: $navigation-drawer-width

    &.navigation-drawer--full-height
      margin-top: $toolbar-height
      max-height: "calc(100vh - %s)" % $toolbar-height
      
    &.navigation-drawer--clipped
      + .toolbar
        padding-left: 0
        z-index: 3
        
    &.navigation-drawer--floating
      max-height: 100%

  &--mini
    margin-top: $toolbar-height
    max-height: "calc(100vh - %s)" % $toolbar-height
    overflow: hidden
    width: $navigation-drawer-mini-variant-width
    
    .list__tile__action, .list__tile__avatar
      justify-content: center
    
    .subheader
      display: none
      
    ~ .toolbar
      padding-left: 0 !important
      
    ~ main
      padding-left: $navigation-drawer-mini-variant-width !important
      
  &--temporary, &--is-mobile
    elevation(16)
    z-index: 5

  .list__tile
    transition: none

    &--active
      .list__tile__title
        color: inherit

      &:first-child
        .icon
          color: $theme.primary

  .list--group
    &__header--active
      &:after
        background: transparent

      .list__tile__action:first-of-type
        .icon
          color: $theme.primary

  .list--group__container
    .list__tile--active
      .list__tile__title
        color: $theme.primary
