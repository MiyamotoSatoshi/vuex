.datatable
  thead
    th.column.sortable
      cursor: pointer

      i
        font-size: 16px
        vertical-align: sub
        display: inline-block
        opacity: 0
        transition: .3s $transition.swing

      &:hover
        i
          opacity: .6

      &.active
        transform: none

        i
          opacity: 1

        &.desc
          i
            transform: rotate(-180deg)

.datatable
  tfoot
    .input-group__details
      display: none

/** Actions */
.datatable__actions
  display: flex
  justify-content: flex-end
  align-items: center
  font-size: 12px

  .btn
    color: inherit

    &:last-of-type
      margin-left: 18px

  &__pagination
    text-align: center
    margin: 0 26px 0 32px

  &__select
    display: flex
    align-items: center
    justify-content: center

    .input-group--select
      margin: 13px 0 13px 34px
      padding: 0
      position: initial

      .input-group__selections__comma
        font-size: 12px

.datatable__progress
  tr
    height: auto !important

  th
    padding: 0 !important

    .progress-linear
      top: -3px
      margin: 0 0 -3px
