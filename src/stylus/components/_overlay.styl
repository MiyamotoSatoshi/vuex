.overlay
  justify-content: center
  align-items: center
  display: flex
  position: fixed
  width: 100%
  height: 100%
  background-color: rgba(0,0,0,0.3)
  transition: $primary-transition
  top: 0
  left: 0
  opacity: 0
  filter: blur(10%)
  pointer-events: none
  z-index: 1000

  &--active
    opacity: 1
    pointer-events: auto
