.overlay
  position: fixed
  top: 0
  left: 0
  right: 0
  bottom: 0
  pointer-events: none
  z-index: 4

  &--absolute
    position: absolute

  &:before
    background-color: rgba(33, 33, 33, 1)
    bottom: 0
    content: ''
    filter: blur(10%)
    height: 100%
    left: 0
    opacity: 0
    position: absolute
    right: 0
    top: 0
    transition: .5s ease
    width: 100%

  &--active
    pointer-events: auto

    &:before
      opacity: .46
