.application--light
  .divider
    background: $material-twelve-percent-dark

.application--dark
  .divider
    background: $material-twelve-percent-light

.divider
  border: none
  display: block
  height: 1px
  flex: 1
  width: 100%
  
  &--inset
    margin-left: 72px
    width: calc(100% - 72px)
    
  &.divider--dark
    background: $material-twelve-percent-light

  &.divider--light
    background: $material-twelve-percent-dark