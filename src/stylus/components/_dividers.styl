@import '../bootstrap'
@import '../theme'

v-divider($material)
  background-color: $material.dividers

theme(v-divider, "v-divider")

.v-divider
  border: none
  display: block
  height: 1px
  flex: 1 1
  min-height: 1px
  width: 100%

  &--inset:not(.v-divider--vertical)
    margin-left: 72px
    width: calc(100% - 72px)

  &--vertical
    flex: 0 1 auto
    height: 100%
    max-width: 1px
    min-width: 1px
    width: 1px

    &.v-divider--inset
      height: calc(100% - 16px)
