.bottom-nav
  background: $theme.primary
  bottom: 0
  box-shadow: 0 3px 14px 2px rgba(#000, .12)
  display: flex
  height: 56px
  justify-content: center
  position: fixed
  transform: translate3d(0, 60px, 0)
  transition: all .4s cubic-bezier(.25, .8, .50, 1)
  width: 100%
  z-index: 6
  
  &--active
    transform: translate3d(0, 0, 0)

  &--absolute
    position: absolute

  .btn
    border-radius: 0
    flex: 1
    height: 100%
    margin: 0
    max-width: 168px
    min-width: 80px
    opacity: .6
    padding: 0px 12px
    text-transform: capitalize
    transform-origin: 50% 50%

    &:not(.btn--active)
      filter: grayscale(100%)

    .btn__content
      flex-direction: column-reverse
      height: 56px
      font-size: 12px
      white-space: nowrap
      transition: all .4s $transition.swing
      
      span
        height: 21px

    &--active
      opacity: 1
      transform: none

      .btn__content
        font-size: 14px

  &--shift
    .btn__content
      font-size: 14px

    .btn
      min-width: 56px
      max-width: 96px

      &--active
        min-width: 96px
        max-width: 168px

.bottom-nav--shift
  .btn:not(.btn--active) .btn__content
    transform: translateY(9px)

    span
      color: transparent