@import '../bootstrap'
@import '../theme'

.application
  flex: 1 1 auto
  backface-visibility: hidden
  display: flex
  flex-direction: column
  min-height: 100vh

  &--wrap
    display: flex

  // TODO: Deprecate
  > main:not(.content)
    flex: 1 0 auto
    display: flex

application($material)
  background: $material.background
  color: $material.text.primary

  a
    color: $material.text.link

app(application)
