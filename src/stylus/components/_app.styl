@import '../bootstrap'
@import '../theme'

.application
  -webkit-backface-visibility: hidden
  display: flex
  min-height: 100vh
  flex-direction: column

  // TODO: Deprecate
  > main:not(.content)
    flex: 1 0 auto
    display: flex
    flex-direction: column

application($material)
  background: $material.background
  color: $material.text.primary

  a
    color: $material.text.link

app(application)
