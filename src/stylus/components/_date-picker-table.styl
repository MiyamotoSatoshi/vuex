@import '../bootstrap'
@import '../theme'

date-picker-table($material)
  .btn
    color: $material.text.primary

theme(date-picker-table, "date-picker-table")

.date-picker-table
  position: relative

  table
    transition: $primary-transition
    top: 0
    table-layout: fixed
    width: 100%

  td, th
    text-align: center

  .btn
    z-index: auto
    margin: 0
    height: 32px
    width: 32px

    &.btn--active
      color: #fff

.date-picker-table--month
  td
    width: 33.333333%
    height: 56px
    vertical-align: middle

.date-picker-table--date
  th
    padding: 8px 0
    font-weight: 600
    font-size: 12px

  td
    width: 45px
