.btn-dropdown
  display: block
  position: relative
  
  input
    text-align: left
      
  .menu, .menu__activator
    width: 100%
  
  &--overflow, &--editable, &--segmented
    input, label
      min-height: 40px
      
    input, label
      padding-left: 16px
      
    .input-group--focused .input-group__wrapper
      background-color: #fff
      
    .input-group__wrapper
      transition: .3s $transition.ease-in-out
      
      &:hover
        background-color: #fff
        
    .input-group__details:after
      display: none
      
  &--light
    btn-dropdown-theme($material-twelve-percent-dark)
      
  &--dark
    btn-dropdown-theme($material-twelve-percent-light)