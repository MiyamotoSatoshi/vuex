.card
  @extend .z-depth-1
  background: $card-background
  display: flex
  flex-direction: column
  position: relative
  
  &--horizontal
    flex-direction: row
    
    .card__title
      flex: 0 1 30%
      
  &__stack
    display: flex
    flex-direction: column
    flex: 1
  
  &__title
    align-items: center
    display: flex
    justify-content: space-between
    padding: $card-padding * 2
    
    &--img
      .card__title-text
        align-self: flex-end
    
    &-text
      font-size: $card-title-text-size
      font-weight: $card-title-text-font-weight
      letter-spacing: $card-title-text-letter-spacing
      display: flex
      align-self: center
      align-items: center
      
  &__text
    padding: $card-padding * 2
  
  &__actions
    box-sizing: border-box
    border-top: $card-actions-border-top
    display: flex
    align-items: center
    padding: $card-padding
    min-height: $card-actions-min-height
    font-size: $card-actions-font-size
    margin-top: auto
    width: 100%
    
    i
      margin: 0 $card-actions-button-padding
    
    .btn
      margin: 0
      padding: 0 $card-actions-button-padding