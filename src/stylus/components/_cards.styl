.card
  elevation(2)
  background: $card-background
  position: relative
  border-radius: $card-border-radius
  min-width: 0

  &--raised
    box-shadow: 0 1px 8px rgba(0,0,0,.2),
                0 3px 4px rgba(0,0,0,.14),
                0 3px 3px -2px rgba(0,0,0,.12)

  &--hover
    cursor: pointer
    transition: all .4s cubic-bezier(.25, .8, .25, 1)
    transition-property: box-shadow

    &:hover
      box-shadow: 0 5px 5px -3px rgba(0,0,0,.2),
                  0 8px 10px 1px rgba(0,0,0,.14),
                  0 3px 14px 2px rgba(0,0,0,.12)

  &--horizontal
    display: flex
    flex-flow: row nowrap
    
    > .card__row
      flex: 0 1 30%
      
  &__column, &__row
    display: flex
    
    &:first-child
      border-top-left-radius: inherit
      border-top-right-radius: inherit
      
    &:last-child
      border-bottom-left-radius: inherit
      border-bottom-right-radius: inherit
      
  &__column
    flex: 1
    flex-flow: column nowrap
    
  &__row
    align-items: center
    margin-top: auto
    flex: 1 1 auto
    flex-flow: row nowrap
    min-height: $card-row-min-height
    
    .card__text
      height: 100%
    
    &--actions
      border-top: 1px solid $material-twelve-percent-dark
      padding: 8px
      height: 52px
      flex: 0 0 auto
      justify-content: flex-end
      width: 100%
      
      .btn
        margin: 0
        padding: 0 8px
  
  &__title
    font-size: $card-title-text-size
    font-weight: $card-title-text-font-weight
    letter-spacing: $card-title-text-letter-spacing
    display: flex
    flex: 1
    align-self: center
    align-items: center
    padding: $card-padding
      
  &__text
    padding: $card-padding
    width: 100%