.card
  @extend .z-depth-1
  background: $card-background
  position: relative
  border-radius: $card-border-radius
  min-width: 0
  width: 100%
  max-width: 100%
  
  &--horizontal
    display: flex
    flex-flow: row nowrap
    
    > .card__row
      flex: 0 1 30%
      
  &__column, &__row
    display: flex
    
    &:first-child
      border-top-left-radius: inherit
      border-top-right-radius: inherit
      
    &:last-child
      border-bottom-left-radius: inherit
      border-bottom-right-radius: inherit
      
  &__column
    flex: 1
    flex-flow: column nowrap
    
  &__row
    align-items: center
    margin-top: auto
    flex: 1 1 auto
    flex-flow: row nowrap
    min-height: $card-row-min-height
    
    &--actions
      border-top: $card-actions-border-top
      padding: ($card-padding / 2)
      min-height: ($card-row-min-height / 2)
      flex: 0 0 auto
      
      > .btn
        padding: 0 ($card-padding / 2)
        
      > .icon
        padding: 0 ($card-padding / 2)
  
  &__title
    font-size: $card-title-text-size
    font-weight: $card-title-text-font-weight
    letter-spacing: $card-title-text-letter-spacing
    display: flex
    flex: 1
    align-self: center
    align-items: center
    padding: $card-padding
      
  &__text
    padding: $card-padding
    width: 100%
    height: 100%