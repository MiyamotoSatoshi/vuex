@import '../bootstrap'
@import '../theme'

.expansion-panel
  text-align: left
  list-style-type: none
  padding: 0
  width: 100%
  elevation(2)

  > li:not(:first-child)
    border-top: none !important

  &__header
    display: flex
    cursor: pointer
    align-items: center
    height: $expansion-panel-collapse-height
    position: relative
    padding-left: 1rem

    i
      margin-right: 1rem

    &:after
      content: '\E313'
      font-family: 'Material Icons'
      font-size: 1.5rem
      position: absolute
      right: 15px
      top: calc(50% - 16px)
      color: inherit
      transition: transform 0.3s cubic-bezier(0, 0, .2, 1)

    &--active
      &:after
        transform: rotate(-180deg)

  &__body
    transition: $primary-transition

    .card
      border-radius: 0
      elevation(0)

expansion-panel($material)
  > li
    border: 1px solid rgba($material.fg-color, $material.divider-percent)

  &__body
    background-color: rgba($material.fg-color, 0.03)

theme(expansion-panel, "expansion-panel")
