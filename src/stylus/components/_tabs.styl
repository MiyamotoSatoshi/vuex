.tabs
  overflow: hidden
  position: relative
  width: 100%

  &--grow
    .tabs__li
      flex: 1

  &--fixed
    .tabs__li
      min-width: 160px
      max-width: 264px
      flex: 0 1 160px

      @media $display-breakpoints.xs-only
        min-width: 72px

  &--centered
    .tabs__container
      justify-content: center

  &--icons
    .tabs__bar
      height: 72px

    .tabs__item
      flex-direction: column

  &.tabs--mobile
    .tabs__bar
      .icon--left, .icon--right
        display: none

      .tabs__wrapper
        &--scrollable.tabs__wrapper--overflow
          overflow: hidden !important

  &:not(.tabs--grow):not(.tabs--mobile)
    .tabs__item
      padding: 0 24px

  &:not(.tabs--centered):not(.tabs--grow):not(.tabs--mobile)
    .tabs__wrapper
      &--scrollable
        margin: 0 60px
        overflow: hidden !important

  &__bar
    background-color: $theme.primary
    width: 100%
    position: relative
    height: 48px

    @media $display-breakpoints.sm-and-down
      padding-left: 0

    .icon--left, .icon--right
      position: absolute
      top: 0
      width: 32px
      align-items: center
      height: 100%
      cursor: pointer
      user-select: none

    .icon--left
      left: 28px

    .icon--right
      right: 28px

  &__container
    display: flex
    height: 100%
    width: 100%
    position: absolute
    padding: 0
    top: 0
    align-items: center
    list-style: none
    will-change: transform
    transition: transform 0.6s cubic-bezier(0.86, 0, 0.07, 1)

    > li:not(.tabs__slider)
      height: 100%

    &-left
      position: absolute
      left: 0
      top: 0
      height: 100%
      width: 32px
      display: flex
      align-items: center

  &__wrapper
    position: relative
    overflow-x: auto
    height: inherit

  &__item
    align-items: center
    display: flex
    flex-shrink: 0
    justify-content: center
    height: 100%
    padding: 0 12px
    position: relative
    text-align: center
    text-decoration: none
    text-transform: uppercase
    text-overflow: ellipsis
    white-space: nowrap

    .icon
      color: inherit
      margin: 0 0 5px

    &--disabled
      pointer-events: none

  &__items
    position: relative
    border-width: 0 1px 1px 1px
    border-style: solid
    border-color: rgba($material-theme.fg-color, .1)
    overflow: hidden

  &__content
    transition: $primary-transition
    width: 100%

    .card
      border-radius: 0 0 2px 2px

  &__slider
    position: absolute
    bottom: 0
    height: 2px
    background: $theme.accent
    transition: $primary-transition
