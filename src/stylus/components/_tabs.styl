.tabs
  margin-bottom: $spacers.double.y
  
  &__tab
    flex: 1
    background: $grey.lighten-3
    border-width: 1px 0 1px 1px
    border-color: $grey.lighten-2
    border-style: solid
    color: $grey.base
    text-decoration: none
    font-weight: 300
    display: block
    padding: 1rem
    position: relative
    text-align: center
    text-transform: uppercase
    transition: $primary-transition
    
    &:last-child
      border-width: 1px
    
    &:after
      content: ""
      position: absolute
      left: 0
      top: 0
      width: 100%
      height: 0
      transition: $secondary-transition
      background: $theme.primary
  
    &--active
      color: $theme.primary
      background: #fff
      border-top-color: $theme.primary
      border-bottom-color: transparent
      
      &:after
        height: 3px
        
  &__container
    display: flex
    position: relative
    align-items: center
    flex-wrap: nowrap
    white-space: nowrap
    overflow-x: auto
    
  &__content-container
    background: #fff
    border-width: 0 1px 1px 1px
    border-color: $grey.lighten-2
    border-style: solid
    width: 100%
    height: 100%
    position: relative
    overflow: hidden
    
  &__content
    transition: .4s ease-out
    padding: 1rem
    height: 100%
    width: 100%
    
    &-enter
      transform: translate3d(100%, 0, 0)
      
    &-leave, &-leave-active
      position: absolute
      top: 2rem
      transform: translate3d(-100%, 0, 0)
      
    &--reverse
      &-enter, &-leave-active
        transform: translate3d(-100%, 0, 0)
        
      &-leave, &-leave-active
        transform: translate3d(100%, 0, 0)