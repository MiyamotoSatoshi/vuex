.tabs
  display: flex
  justify-content: center
  position: relative
  align-items: center
  border-bottom: 1px solid $grey.lighten-2
    
  &__tab
    flex: 1
    color: $grey.lighten-2
    text-decoration: none
    font-weight: 300
    display: block
    padding: 1rem
    position: relative
    text-align: center
    text-transform: uppercase
    transition: $primary-transition
    
    &:after
      content: ""
      position: absolute
      left: 0
      bottom: 0
      width: 0%
      height: 2px
      transition: $secondary-transition
      background: $theme.primary
  
    &--active
      color: $theme.primary
      
      &:after
        width: 100%
        
  &__container
    position: relative
    
  &__content
    padding: 2rem 0
    width: 100%
    height: 100%
    transition: $primary-transition
    
    &-enter, &-leave-active
      transform: translate3d(100%, 0, 0)
      
    &-leave, &-leave-active
      top: 0
      position: absolute
      transform: translate3d(-100%, 0, 0)
      
    &--reverse
      &-enter, &-leave-active
        transform: translate3d(-100%, 0, 0)
        
      &-leave, &-leave-active
        transform: translate3d(100%, 0, 0)