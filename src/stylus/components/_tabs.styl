.tabs
  overflow: hidden
  position: relative
  width: 100%
  
  > .card
    border-radius: 0
  
  .card
    background: inherit
    box-shadow: none
    
  ul
    padding: 0
    
  &--grow
    .tabs__container
      > li
        flex-grow: 1
      
  &--centered
    .tabs__container
      justify-content: center
      
  &--icons
    .tabs__tabs
      height: 90px
      
  &--scroll-bars     
    .tabs__tabs--mobile
      padding: 0 35px
      
      .icon--left, .icon--right
        display: flex
        
      .tabs__container
        width: calc(100% - 70px)
    
    
  &__tabs
    background-color: $theme.primary
    width: 100%
    position: relative
    height: 60px
    
    .icon--left, .icon--right
      position: absolute
      top: 0
      width: 35px
      display: none
      color: #fff
      align-items: center
      height: 100%
      cursor: pointer
      user-select: none
      
    .icon--left
      left: 0
      
    .icon--right
      right: 0
      
  &__items
    overflow: hidden
    position: relative
    border-width: 0 1px 1px 1px
    border-style: solid
    border-color: rgba(#000, .1)
    
  &__container
    overflow-x: auto
    overflow-y: hidden
    display: flex
    height: 100%
    width: 100%
    position: absolute
    padding: 1rem
    top: 0
    align-items: center
    list-style: none
    
    > li
      height: 100%
    
    &-left
      position: absolute
      left: 0
      top: 0
      height: 100%
      width: 35px
      display: flex
      align-items: center
  
  .list__item
    display: flex
    flex-shrink: 0
    align-items: initial
    justify-content: center
    min-width: 125px
    height: 100%
    padding: 0
    margin: 0
    min-width: 0
    position: relative
    text-align: center
    text-decoration: none
    text-transform: uppercase
    text-overflow: ellipsis
    transition: $primary-transition
    overflow: hidden
    white-space: nowrap
    flex-wrap: wrap
    
    > .list__item__avatar,
    > .list__item__content,
    > .list__item__actions
      flex: 1 0 100%
      justify-content: center
      
    .list__item__title
      color: #fff
      text-align: center
    
    .icon
      color: #fff
      flex: 0 1 auto
      font-size: 32px
      margin: 0
      height: auto
      width: auto

    &--active
      color: #fff
      
    &--disabled
      opacity: .5
      pointer-events: none
    
  &__item
    transition: $primary-transition
    width: 100%
  
    > .card
      box-shadow: none
      
  &__slider
    position: absolute
    bottom: 0
    height: 4px
    background: $theme.accent
    transition: $primary-transition