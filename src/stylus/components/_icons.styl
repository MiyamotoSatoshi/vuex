.icon
  display: inline-flex
  align-items: center
  justify-content: center
  vertical-align: middle
  
  &--dark
    icon(#fff, rgba(#fff, .50))
  
  &--light
    icon(rgba(#000, .54), rgba(#000, .38))

  &--large
    font-size: 2.5rem
    
  &--medium
    font-size: 2rem
    
  &--x-large
    font-size: 3rem