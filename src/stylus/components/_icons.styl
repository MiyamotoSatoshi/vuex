.icon
  display: inline-flex
  align-items: center
  justify-content: center
  
  &--dark
    icon(#fff, rgba(#fff, .50))
  
  &--light
    icon(rgba(#000, .54), rgba(#000, .38))

  &--large
    font-size: 2.5rem
    min-width: 3.5rem // needed for safari
    width: 3.5rem // needed for safari
    height: 3.5rem // needed for safari
    
  &--medium
    font-size: 2rem
    min-width: 3rem // needed for safari
    width: 3rem // needed for safari
    height: 3rem // needed for safari
    
  &--x-large
    font-size: 3rem
    min-width: 4rem // needed for safari
    width: 4rem // needed for safari
    height: 4rem // needed for safari