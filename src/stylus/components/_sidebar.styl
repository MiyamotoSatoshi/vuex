.sidebar
  background-color: $theme.secondary
  flex-shrink: 0
  max-width: 100%
  overflow-y: auto
  overflow-x: hidden
  padding: 0 0 100px
  pointer-events: auto
  transition: transform .3s $transition.ease-in-out,
    margin .3s $transition.ease-in-out,
    width .2s $transition.ease-in-out
  width: $sidebar-width
  z-index: 3
  
  &--right
    order: +1
  
  &--close
    &:not(.sidebar--drawer)
      &.sidebar--left
        margin-left: "-%s" % $sidebar-width

      &.sidebar--right
        margin-right: "-%s" % $sidebar-width
        
    &.sidebar--drawer
      &.sidebar--left
        transform: "translate3d(-%s, 0, 0)" % ($sidebar-width + 25)

      &.sidebar--right
        transform: "translate3d(%s, 0, 0)" % ($sidebar-width + 25)

  &--drawer
    position: fixed
    top: 0
    left: 0
    z-index: 5
    elevation(16)
    
    &.sidebar--right
      left: initial
      right: 0

  &--absolute
    position: absolute

  &--mini
    overflow: hidden
    width: 88px
    
    .list__tile__action, .list__tile__avatar
      justify-content: center
    
    .subheader
      display: none
        
  &--dark
    sidebar(#fff)
    
  &--light
    sidebar(rgba(#000, .87))

  .list__tile
    transition: none

    &--active
      .list__tile__title
        color: inherit

      &:first-child
        .icon
          color: $theme.primary

  .list--group
    &__header--active
      &:after
        background: transparent

      .list__tile__action:first-of-type
        .icon
          color: $theme.primary

  .list--group__container
    .list__tile--active
      .list__tile__title
        color: $theme.primary
