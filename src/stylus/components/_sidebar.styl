.sidebar
  background-color: $theme.secondary
  display: flex
  flex-basis: $sidebar-width
  flex-direction: column
  overflow-y: auto
  transition: transform .3s cubic-bezier(0,0,.2,1)
  width: $sidebar-width
  z-index: 3
  @extend .z-depth-2

  ul
    list-style-type: none
    width: 100%
    
  &--right
    order: +1
  
  &--fixed
    top: 0
    left: 0
    position: fixed
    z-index: 5
    
    &-right
      right: 0
    
  &--drawer
    flex-basis: 0
    transform: translateX(-($sidebar-width + 25))
    
  &--drawer--right
    transform: translateX($sidebar-width + 25)
    
  &--open
    transform: translateX(0) !important
    width: $sidebar-width
    
  &--close
    transform: translateX(-($sidebar-width + 25))
    flex-basis: 0 !important
    
    .sidebar--fixed-right
      transform: translateX($sidebar-width + 25)
    
  &--mobile
    @media screen and (max-width: $grid-breakpoints.sm)
      transform: translateX(-($sidebar-width + 25))
      flex-basis: 0 !important
      
      .sidebar--fixed-right
        transform: translateX($sidebar-width + 25)
    
  &__group    
    .sidebar__items
      overflow: hidden
    
    .sidebar__item
      padding-left: 3rem
    
  &__items
    display: flex
    flex-direction: column
    transition: $primary-transition
    
  &__item
    color: $sidebar-item-color
    display: flex
    align-items: center
    text-decoration: none
    transition: $primary-transition
    font-weight: 300
    padding: $sidebar-item-padding
    height: 3rem
  
    &--active
      background-color: $theme.secondary
    
    &:hover
      background-color: $theme.secondary
      color: #FFFFFF
      
    > span
      margin-left: $spacers.three.x
      
  &__item-header
    @extend .sidebar__item
    
    &:after
      content: 'keyboard_arrow_left'
      font-family: 'Material Icons'
      font-size: 1.5rem
      position: absolute
      right: 15px
      color: inherit
      transition: $primary-transition
      
    &:hover
      background: $theme.primary
      
    &--active
      background: $theme.primary
      
      &:after
        transform: rotate(-90deg)