.sidebar
  background-color: $theme.secondary
  flex-shrink: 0
  max-width: 100%
  overflow-y: auto
  overflow-x: hidden
  padding: 0 0 100px
  pointer-events: auto
  transition: transform .3s $transition.ease-in-out,
    margin .3s $transition.ease-in-out,
    width .2s $transition.ease-in-out
  width: $sidebar-width
  z-index: 3
  
  &--right
    order: +1
  
  &--close
    &:not(.sidebar--absolute):not(.sidebar--fixed)
      &.sidebar--left
        margin-left: "-%s" % $sidebar-width

      &.sidebar--right
        margin-right: "-%s" % $sidebar-width
        
    &.sidebar--fixed, &.sidebar--absolute
      &.sidebar--left
        transform: "translate3d(-%s, 0, 0)" % ($sidebar-width + 25)

      &.sidebar--right
        transform: "translate3d(%s, 0, 0)" % ($sidebar-width + 25)
  
  &--absolute
    position: absolute
    top: 0
    left: 0
    
    &.sidebar--right
      left: initial
      right: 0

  &--drawer
    elevation(16)

