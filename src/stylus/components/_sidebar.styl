.sidebar
  background-color: $theme.secondary
  overflow-y: auto
  padding: 0 0 100px
  transition: transform .3s $transition.ease-in-out,
    margin .3s $transition.ease-in-out
  width: $sidebar-width
  max-width: 100%
  z-index: 3

  &--fixed
    top: 0
    left: 0
    position: fixed
    z-index: 6
    elevation(0)

    &-right
      right: 0
      left: initial

  &--drawer
    flex-basis: 0
    transform: translateX(-($sidebar-width + 25))
    elevation(16)

  &--close
    transform: translateX(-($sidebar-width + 25))

    &.sidebar--fixed-right
      transform: translateX($sidebar-width + 25)

  &--mobile
    @media screen and (max-width: $grid-breakpoints.lg)
      transform: translateX(-($sidebar-width + 25))
      z-index: 7

      &.sidebar--fixed-right, &.sidebar--right
        transform: translateX($sidebar-width + 25)

  &--open, &--open.sidebar--mobile
    transform: translateX(0)
    width: $sidebar-width

  &:not(.sidebar--fixed):not(.sidebar--right)
    @media screen and (max-width: $grid-breakpoints.lg)
      margin-left: -300px
      transform: none

      &.sidebar--open
        transform: translateX(300px)

  &:not(.sidebar--fixed).sidebar--right
    @media screen and (max-width: $grid-breakpoints.lg)
      margin-right: -300px
      transform: none

      &.sidebar--open
        transform: translateX(-300px)

  .list__tile
    color: $sidebar-item-color
    transition: $primary-transition
    position: relative

    .list__tile__avatar, .list__tile__action, .icon
      color: $sidebar-item-color

    &:hover:not(&--active)
      background-color: $sidebar-item-hover-background-color
      color: $sidebar-item-active-color

    &:after
      background: $material-twelve-percent-light

    &--active
      .list__tile__title
        color: inherit

      &:first-child
        .icon
          color: $theme.primary

  .list--group
    &__header--active
      &:first-child
        .list__tile__action:first-child
          .icon
            color: $theme.primary

    &:after
      background: $material-twelve-percent-light

  .list--group__container
    .list__tile--active
      .list__tile__title
        color: $theme.primary
