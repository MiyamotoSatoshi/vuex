.sidebar
  background-color: $theme.secondary
  max-width: 100%
  overflow-y: auto
  overflow-x: hidden
  padding: 0 0 100px
  pointer-events: auto
  position: fixed
  transition: transform .3s $transition.swing,
    width .2s $transition.ease-in-out
  width: $sidebar-width
  top: 0
  left: 0
  z-index: 5
  
  &--close
    &.sidebar:not(.sidebar--right)
      transform: "translate3d(-%s, 0, 0)" % ($sidebar-width)

    &.sidebar--right
      transform: "translate3d(%s, 0, 0)" % ($sidebar-width)

  &--drawer
    elevation(16)
    
  &.sidebar--right
    left: initial
    right: 0

  &--absolute
    position: absolute

  &--mini
    overflow: hidden
    width: 88px
    
    .list__tile__action, .list__tile__avatar
      justify-content: center
    
    .subheader
      display: none
        
  &--dark
    sidebar(#fff)
    
  &--light
    sidebar(rgba(#000, .87))

  .list__tile
    transition: none

    &--active
      .list__tile__title
        color: inherit

      &:first-child
        .icon
          color: $theme.primary

  .list--group
    &__header--active
      &:after
        background: transparent

      .list__tile__action:first-of-type
        .icon
          color: $theme.primary

  .list--group__container
    .list__tile--active
      .list__tile__title
        color: $theme.primary
