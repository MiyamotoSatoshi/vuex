.menu
  display: inline-block
  position: relative
  
  &--disabled
    cursor: not-allowed
    
    .menu__activator
      cursor: not-allowed
  
  &__activator
    align-items: center
    cursor: pointer
    position: relative
  
  &__content
    background-color: #fff
    position: absolute
    display: inline-block
    border-radius: 2px
    overflow-y: auto
    overflow-x: hidden
    z-index: 100
    @extend .z-depth-2
    
  &-transition
    &-enter
      opacity: 0
      
      .list__tile
        min-width: 0
        transition-delay: .1s
        opacity: 0
        transform: translateY(-15px)
        pointer-events: none
        
      .list__tile--active
        opacity: 1 !important
        transform: translateY(0) !important
        pointer-events: auto
      
    &-enter-to
      opacity: 1
        
      .list__tile
        pointer-events: auto
        opacity: 1
      
      .list__tile--active
        opacity: 1 !important
      
    &-leave-to
      transform: translateY(-10px)
        
    &-enter, &-leave-to
      opacity: 0
      
    &-enter-to, &-leave
      opacity: 1
      
    &-enter-active, &-leave-active
      transition: all .3s $transition.ease-in-out, top 1ms, left 1ms, bottom 1ms, right 1ms
      