.menu
  display: inline-block
  position: relative
  vertical-align: middle

  &--disabled
    cursor: not-allowed

    .menu__activator
      cursor: not-allowed

  &__activator
    align-items: center
    cursor: pointer
    position: relative

  &__content
    background: $material-theme.bg-color
    position: absolute
    display: inline-block
    border-radius: 2px
    overflow-y: auto
    overflow-x: hidden
    z-index: 6
    elevation(8)
    
    &--dropdown
      border-top-left-radius: 0
      border-top-right-radius: 0
      border-top: 1px solid $material-light.dividers

  &-transition
    &-enter
      .list__tile
        min-width: 0
        transition-delay: .4s
        opacity: 0
        transform: translateY(-15px)
        pointer-events: none

    &-enter-to
      .list__tile
        pointer-events: auto
        opacity: 1
        
      .list__tile--active
        transform: none !important
      
    &-leave-to
      transform: translateY(-10px)
    
    &-leave-active, &-leave-to
      pointer-events: none
        
    &-enter, &-leave-to
      opacity: 0

    &-enter-to, &-leave
      opacity: 1

    &-enter-active, &-leave-active
      transition: all .5s $transition.swing

.menu-transition-enter
  &.menu__content--auto
    .list__tile--active
      opacity: 1
      transform: none !important
      pointer-events: auto
