.dialog
  margin: 24px 40px
  transition: .3s ease-in-out
  z-index 1001
  
  &:not(.dialog--fullscreen)
    max-width: 90%
  
  &__container
    display: inline-block
    vertical-align: middle

  >
    .card
      elevation(24)

      & ^[2..-1]__title
        padding 12px 24px

      & ^[2..-1]__text
        padding 20px 24px 24px

      & ^[2..-1]__row--actions
        padding: 8px 0

        .btn
          margin-right: 8px

  &:not(.dialog--scrollable)
    > .card
      .card__row--actions
        border initial

  &--fullscreen
    margin 0
    width 100%
    height 100%
    position fixed
    overflow-y: auto
    top: 0
    left 0

    .toolbar
      height 56px           // TODO: height with two lines of text: 80dp
      padding 0 !important

      &__title
        font-size 20px      // TODO: convert from 20sp
        padding: 20px 0     // TODO: convert from 20dp

      .btn
        &:first-child      // TODO: full width 72dp
          max-width: 24px
          max-height: 24px
          margin: 0 32px 0 16px !important
        &:last-child
          margin 0 !important
          height 100%
          font-size 14px    // TODO: convert from 14sp

    .card
      min-height 100%
      min-width 100%
      margin 0 !important
      padding 0 !important
      
  &--scrollable
    .card__row:not(.card__row--actions)
      overflow-y: auto
      
    .card__title
      border-bottom: 1px solid $material-twelve-percent-dark
    
    .card__row--actions
      border-top: 1px solid $material-twelve-percent-dark
