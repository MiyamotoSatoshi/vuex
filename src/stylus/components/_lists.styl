.list
  list-style-type: none
  padding: 0
  
  .input-group
    margin: 0
  
  &--dense
    .list__row      
      &:first-child
        margin-top: 4px
        
    .list__tile
      height: 32px
      font-size: 13px
      
    .list__tile__title
      font-size: 13px
      font-weight: 500
      
    .list__tile__sub-title
      font-size: 13px
      
  &--two-line
    .list__tile
      height: 56px
      
    &.list--dense
      .list__tile
        height: 44px
        
  &--three-line
    .list__tile
      height: 72px
      
    .list__tile__action
      align-items: flex-start
      
    .list__tile__sub-title
      white-space: initial
      -webkit-line-clamp: 2
      -webkit-box-orient: vertical
      display: -webkit-box
      
    &.list--dense
      .list__tile
        height: 60px    
  
  &__row
    padding: 8px 16px
    
    &:hover
      background: rgba(#000, 0.1)
    
    &:first-child
      margin-top: 8px
      
  &__tile
    color: $color-root
    display: flex
    height: 40px
    text-decoration: none
    align-items: center
    
    &__content,
    &__action,
    &__avatar
      height: 100%
    
    &__title
      font-size: 16px
      line-height: 1
      font-weight: 500
      
      &:not(:only-child)
        margin-bottom: 4px
      
    &__sub-title
      color: $grey.base
      font-size: 14px
      line-height: 1.2
      white-space: nowrap
      overflow: hidden
      text-overflow: ellipsis
      font-weight: 400
    
    &__action, &__avatar
      display: flex
      justify-content: flex-start
      align-items: center
      flex: 1 0 56px
      
    &__action
      justify-content: flex-start
      flex-direction: column
      justify-content: center
      
      &--stack
        justify-content: space-between
        align-items: flex-end
      
    &__avatar
      img, .icon
        height: 42px
        width: 42px
        border-radius: 50%
      
    &__content
      text-align: left
      flex: 0 1 100%
      font-size: 15px
      overflow: hidden
      display: flex
      align-items: left
      justify-content: center
      // flex-wrap: wrap
      flex-direction: column
      // padding: 8px 0
      
      + .list__tile__avatar
        justify-content: flex-end
        
      + .list__tile__action
        flex: 1 0 48px
  

