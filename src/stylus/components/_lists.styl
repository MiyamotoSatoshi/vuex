.list
  list-style-type: none
  padding: 0
  margin: 0

  a
    text-decoration: none
  
  &__item
    align-items: center
    display: flex
    padding: 1rem 0
    
    &-action
      display: flex
      flex-direction: column
      margin-left: 2rem
      align-items: center
      
    &-action-title
      color: $grey.base
      font-size: .82rem
      font-weight: 300
          
    &-avatar
      align-self: flex-start
      color: #FFFFFF
      margin-right: 2rem
      flex: 0 1 auto
      border-radius: 50%
      display: flex
      align-items: center
      justify-content: center
  
    &-title
      display: flex
      flex-direction: column
      letter-spacing: .05rem
      font-weight: 500
      flex: 1 1 auto
      
    &-sub-title
      color: $grey.darken-1
      font-size: .9rem
      font-weight: 300
      letter-spacing: 0
      
    &-icon
      color: $grey.base
      margin-right: 2rem