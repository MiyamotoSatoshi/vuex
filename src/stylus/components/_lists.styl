.list
  list-style-type: none
  padding: 0
  
  a
    text-decoration: none
    
  li
    min-height: 72px
    display: flex
    align-items: center
    justify-content: center
    margin: 0 -14px
    transition: $primary-transition
    
    &:first-child
      margin-top: -14px
      
    &:last-child
      margin-bottom: -14px
    
    &.disabled
      pointer-events: none
    
    &:hover
      background: rgba(#000, .1)
    
  &__item
    display: flex
    align-items: center
    text-decoration: none
    color: inherit
    margin: 0 -14px
    padding: 14px
    width: 100%
    height: 100%
    
    &:not(:first-child)
      padding: 14px 0 0
      
    .input-group
      margin: 0
              
    &__avatar, &__action
      display: flex
      align-items: left
      flex: 1 0 78px
      
    &__action
      align-items: center
      justify-content: flex-start
      flex-wrap: wrap
      
      &-text
        flex: 1 0 100%
        margin-bottom: 24px
        text-align: right
        color: $grey.base
      
    &__avatar
      justify-content: flex-start
      
      img, .icon
        height: 48px
        width: 48px
        border-radius: 50%
        
      img
        border: 1px solid #ccc
        
      .icon
        font-size: 32px
        color: $grey.darken-3
    
    &__title
      font-size: 17px
      font-weight: 500
      
    &__content
      text-align: left
      flex: 0 1 100%
      font-size: 15px
      overflow: hidden
      
      + .list__item__avatar, + .list__item__action
        justify-content: flex-end
        
    &__sub-title
      color: $grey.base
      font-size: 15px
      white-space: nowrap
      overflow: hidden
      text-overflow: ellipsis
      
      &--clamp
        white-space: initial
        -webkit-line-clamp: 2
        -webkit-box-orient: vertical
        display: -webkit-box

