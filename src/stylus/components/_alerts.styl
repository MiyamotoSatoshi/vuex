.alert
  border-radius: $alert-border-radius
  border-width: $alert-border-width
  border-style: solid
  border-color: rgba(#000, .8)
  color: $alert-color
  display: flex
  font-size: $alert-font-size
  text-align: left
  padding: $alert-padding
  position: relative
  margin: $alert-margin
  
  &__icon, &__dismissible
    align-self: center
    margin-right: $alert-padding
    font-size: $alert-icon-font-size
    color: $alert-icon-color
    
  &__dismissible
    margin-right: 0
    margin-left: $alert-padding
    transition: $primary-transition
    align-self: flex-start
    text-decoration: none
    
    &:hover
      color: lighten($alert-icon-color, 10%)
    
  > div
    display: flex
    align-items: center
    width: 100%

  &--info
    alert($theme.info)
        
  &--error
    alert($theme.error)

  &--success
    alert($theme.success)
    
  &--warning
    alert($theme.warning)
    
  &--no-icon
    .alert__icon
      display: none
    
  @media screen and (max-width: $grid-breakpoints.sm)
    &__icon
      display: none