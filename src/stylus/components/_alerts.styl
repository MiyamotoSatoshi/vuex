.alert
  border-radius: $alert-border-radius
  border-width: $alert-border-width
  border-style: solid
  color: $alert-color
  display: flex
  font-size: 1.1rem
  text-align: left
  padding: $alert-padding
  position: relative
  margin: $alert-margin
  
  > .icon
    align-self: center
    margin-right: $alert-padding
    margin-bottom: 4px
    font-size: 2rem
    color: rgba($shades.black, .3)
    
  > div
    width: 100%

  &--info
    alert($theme.info, $blue.darken-2)
        
  &--error
    alert($theme.error, $red.darken-2)

  &--success
    alert($theme.success, $green.darken-2)
    
  &--warning
    alert($theme.warning, $amber.darken-2)