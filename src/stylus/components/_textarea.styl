@import '../bootstrap'
@import '../theme'

v-textarea($material)
  // Add full width functionality


theme(v-textarea, "v-textarea")

// Add no resize classes
.v-textarea
  textarea
    flex: 1 1 auto
    line-height: 18px
    max-width: 100%
    min-height: 32px
    overflow: hidden
    outline: none
    padding: 7px 0 8px
    width: 100%

  &.v-text-field--box,
  &.v-text-field--enclosed
    textarea
      margin-top: 24px

    &.v-text-field--single-line
      textarea
        margin-top: 12px

      .v-label
        top: 18px

      &.v-text-field--outline
        .v-input__control
          padding-top: 0

  &.v-text-field--solo
    align-items: flex-start

    // Essentially revert styles
    // applied by v-text-field
    .v-input__prepend-outer,
    .v-input__append-inner,
    .v-input__append-outer
      align-self: flex-start
      margin-top: 16px

  &__mask
    left: 0
    line-height: 18px
    overflow: hidden
    padding: 7px 0 8px
    position: absolute
    top: 0
    text-indent: 24px
    word-break: break-all
    width: 100%
    visibility hidden
