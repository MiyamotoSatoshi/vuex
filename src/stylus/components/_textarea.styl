@import '../bootstrap'
@import '../theme'

v-textarea($material)
  // Add full width functionality


theme(v-textarea, "v-textarea")

// Add no resize classes
.v-textarea
  textarea
    min-height: 32px
    outline: none

  .v-input__append-inner
    align-self: flex-start
    margin-top: 6px

  &.v-text-field--box,
  &.v-text-field--enclosed
    textarea
      margin-top: 8px

    &.v-text-field--single-line
      textarea
        margin-top: 12px

      .v-label
        top: 18px

      &.v-text-field--outline
        .v-input__control
          padding-top: 0

  // For specificity
  &.v-textarea.v-text-field--box,
  &.v-textarea.v-text-field--enclosed
    .v-input__prepend-outer,
    .v-input__append-inner,
    .v-input__append-outer
      align-self: flex-start
      margin-top: 16px

    &:not(.v-text-field--single-line)
      .v-input__append-inner
        margin-top: 0
