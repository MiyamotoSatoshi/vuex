@import '../bootstrap'
@import '../theme'

v-textarea($material)
  // Add full width functionality
  &--textarea:not(.v-text-field--full-width)
    border: 2px solid $material.text.secondary
    background: transparent !important

theme(v-textarea, "v-textarea")

// Add no resize classes
.v-textarea
  textarea
    min-height: 32px
    outline: none

  .v-input__slot
    align-items: flex-start

  .v-label
    top: 5px

  &.v-textarea--textarea
    border-radius: 2px

    &.v-input--is-focused
      border: 2px solid currentColor
      transition: border $primary-transition
